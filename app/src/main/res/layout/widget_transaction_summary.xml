<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/widget_transactions_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:padding="12dp"
        android:text="@string/app_name"
        android:textAppearance="@android:style/TextAppearance.SearchResult.Title"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/widget_add_transaction"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:layout_above="@+id/widget_transactions_list"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="16dp"
        android:contentDescription="@string/about"
        android:src="@drawable/bg_circle" />

    <ListView
        android:id="@+id/widget_transactions_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_transactions_heading"
        android:divider="@null"
        android:dividerHeight="1dp" />
</RelativeLayout>
