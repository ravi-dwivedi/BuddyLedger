<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_grey">

    <LinearLayout
        android:id="@+id/txtResultIdCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="top|end"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/txtMiddle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="end|center_vertical"
            android:paddingEnd="10dp"
            android:textColor="@color/white"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/txtBottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="end|bottom"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="35sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/calc_action_buttons"
        android:layout_below="@id/txtResultIdCard"
        android:layout_margin="5dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="4">

        <TableLayout
            android:id="@+id/tableId"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <TableRow
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="4">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="4"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp">

                    <Button
                        android:id="@+id/btnClearId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:text="@string/clear" />
                </android.support.v7.widget.CardView>
            </TableRow>

            <TableRow
                android:layout_height="match_parent"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp">

                    <Button
                        android:id="@+id/btnNum7Id"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:text="@string/numeric_7"
                        android:textSize="@dimen/calc_button_txt_size" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp">

                    <Button
                        android:id="@+id/btnNum8Id"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:text="@string/numeric_8"
                        android:textSize="@dimen/calc_button_txt_size" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp">

                    <Button
                        android:id="@+id/btnNum9Id"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:text="@string/numeric_9"
                        android:textSize="@dimen/calc_button_txt_size" />
                </android.support.v7.widget.CardView>
            </TableRow>

            <TableRow
                android:layout_height="match_parent"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp">

                    <Button
                        android:id="@+id/btnNum4Id"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:text="@string/numeric_4"
                        android:textSize="@dimen/calc_button_txt_size" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp">

                    <Button
                        android:id="@+id/btnNum5Id"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:text="@string/numeric_5"
                        android:textSize="@dimen/calc_button_txt_size" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp">

                    <Button
                        android:id="@+id/btnNum6Id"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:text="@string/numeric_6"
                        android:textSize="@dimen/calc_button_txt_size" />
                </android.support.v7.widget.CardView>
            </TableRow>

            <TableRow
                android:layout_height="match_parent"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp">

                    <Button
                        android:id="@+id/btnNum1Id"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:text="@string/numeric_1"
                        android:textSize="@dimen/calc_button_txt_size" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp">

                    <Button
                        android:id="@+id/btnNum2Id"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:text="@string/numeric_2"
                        android:textSize="@dimen/calc_button_txt_size" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp">

                    <Button
                        android:id="@+id/btnNum3Id"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:text="@string/numeric_3"
                        android:textSize="@dimen/calc_button_txt_size" />
                </android.support.v7.widget.CardView>
            </TableRow>

            <TableRow
                android:layout_height="match_parent"
                android:layout_weight="1">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp">

                    <Button
                        android:id="@+id/btnNum0Id"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:text="@string/numeric_0"
                        android:textSize="@dimen/calc_button_txt_size" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp">

                    <Button
                        android:id="@+id/btnDecimal"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:text="@string/numeric_decimal"
                        android:textSize="@dimen/calc_button_txt_size" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="5dp">

                    <Button
                        android:id="@+id/btnDelId"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:background="?android:attr/selectableItemBackground"
                        android:text="@string/calculator_C"
                        android:textSize="@dimen/calc_button_txt_size" />
                </android.support.v7.widget.CardView>

            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:clickable="true"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp">

                <Button
                    android:id="@+id/btnDivId"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:text="@string/calculator_divide"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/calc_button_txt_size" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp">

                <Button
                    android:id="@+id/btnMulId"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="@string/calculator_multiply"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/calc_button_txt_size" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp">

                <Button
                    android:id="@+id/btnSubId"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="@string/calculator_subtract"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/calc_button_txt_size" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp">

                <Button
                    android:id="@+id/btnAddId"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:text="@string/calculator_add"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/calc_button_txt_size" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="5dp">

                <Button
                    android:id="@+id/btnEqualId"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:text="@string/calculator_equal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/calc_button_txt_size" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/calc_action_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:onClick="onCancel"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/button2"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:onClick="onDone"
            android:text="@string/done" />
    </LinearLayout>
</RelativeLayout>