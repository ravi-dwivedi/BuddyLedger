<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tutorial_bg_screen2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/tutorial_img_width_height"
            android:layout_height="@dimen/tutorial_img_width_height"
            android:contentDescription="@string/tutorial_image_content_description"
            android:src="@drawable/add_group" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Group"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tutorial_slide_title"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="@dimen/tutorial_desc_padding"
            android:paddingRight="@dimen/tutorial_desc_padding"
            android:text="Add new group and select from multiple type by pressing add group option or + button"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tutorial_slide_desc" />

    </LinearLayout>


</RelativeLayout>